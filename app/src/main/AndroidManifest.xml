<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="stepstkmce.blooddonors">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".home.Activity_Home"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".searchResults.Activity_SearchList"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".authentication.GoogleLogin"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".splashScreen.SplashScreen"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".searchResults.Activity_Search_Detailed"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".updateInfo.UpdateActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".updateInfo.UpdateInfoActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
    </application>

</manifest>